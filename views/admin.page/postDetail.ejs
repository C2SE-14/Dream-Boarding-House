<h2 class="mb-5">All posts of room for rent</h2>

<div class="row">
  <% ownerId.forEach(room => { %>
  <div class="col-sm-6 col-lg-4 mb-4 mh-100">
    <div class="card" id="item">
      <img src="" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title fs-5 fw-bold"><%= room.description %></h5>
        <p class="card-text fs-5"><%= room.username %></p>
        <p class="card-text fs-6">Price: <%= room.price %></p>
        <p class="card-text fs-6">Address: <%= room.address %></p>
        <!-- <a href="" class="btn btn-dark w-100 fw-bold">Details</a> -->
        <% if(room.isAccept == false) { %>
        <div class="row">
          <form
            class="col-6"
            action="/admin/room/<%= room._id%>/accept?_method=PUT"
            method="POST"
          >
            <input type="text" name="isAccept" value="true" class="d-none" />
            <div class="">
              <input
                type="submit"
                class="btn btn-primary fw-bold w-100 mt-2 col-6"
                value="Accept"
              />
            </div>
          </form>
          <div class="col-6">
            <a
              href=""
              type="submit"
              data-bs-toggle="modal"
              data-bs-target="#delete-post-modal"
              data-bs-id="<%= room._id %>"
              class="btn btn-danger fw-bold w-100 mt-2"
            >
              Delete
            </a>
          </div>
        </div>
        <% } else { %>
        <p class="btn btn-primary w-100 fw-bold">Accepted</p>
        <% } %>
        <!-- <a href="" class="btn btn-dark w-100 fw-bold mt-2">Add Quizz</a>
      <a href="" class="btn btn-dark w-100 fw-bold mt-2">Manager Quiz</a> -->
      </div>
    </div>
  </div>
  <% }) %>
</div>

<!-- Modal delete -->
<div
  class="modal fade"
  id="delete-post-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Post</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">Do you want to delete this post?</div>
      <div class="modal-footer">
        <button id="btn-delete-post" type="button" class="btn btn-danger">
          Delete
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Delete hidden form -->
<form class="mt-4" name="delete-post-form" method="POST"></form>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
  crossorigin="anonymous"
></script>

<script>
  var roomId;
  var btnDeletePost = document.getElementById("btn-delete-post");
  var deleteForm = document.forms["delete-post-form"];
  var deletePostModal = document.getElementById("delete-post-modal");
  deletePostModal.addEventListener("show.bs.modal", function (event) {
    var button = event.relatedTarget;
    roomId = button.getAttribute("data-bs-id");
  });
  btnDeletePost.onclick = function () {
    // alert(topicId);
    deleteForm.action = "/admin/room/" + roomId + "?_method=DELETE";
    deleteForm.submit();
  };
</script>
