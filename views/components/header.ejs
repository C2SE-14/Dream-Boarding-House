<link
  rel="stylesheet"
  href="<%= process.env.BASE_URL %>/stylesheets/header.css"
/>
<header class="header">
    <h3 class="logo">Dream boarding house</h3>
    <nav>
      <ul class="nav-bar">
        <li class="nav-item">
          <a href="/" class="nav-link">TRANG CHỦ</a>
        </li>
        <% if(user) {%>
          <%if(role !== "Người thuê trọ") {%>
            <li class="nav-item">
              <a href="/room/post" class="nav-link">ĐĂNG TIN</a>
            </li>
            <li class="nav-item">
              <a href="/innkeeper/myRoom/all" class="nav-link">QUẢN LÝ BÀI ĐĂNG</a>
            </li>
          <%} else {%>
            <li class="nav-item">
              <a href="/favoriteList/rooms" class="nav-link">DANH SÁCH YÊU THÍCH</a>
            </li>
            <li class="nav-item">
              <a href="/room/selectRoom/All" class="nav-link">PHÒNG ĐÃ THUÊ</a>
            </li>
            <li class="nav-item">
              <a href="/user/innkeeper/all" class="nav-link">CHỦ TRỌ YÊU THÍCH</a>
            </li>
          <%}%>
            <li class="nav-item">
              <a href="/user/infor" class="nav-link">QUẢN LÝ THÔNG TIN</a>
            </li>
            <li class="nav-item">
              <a href="" class="nav-link">THÔNG BÁO</a>
            </li>
            <li class="nav-item">
              <a href="" class="nav-link"><%= user.username %></a>
            </li>
            <li class="nav-item">
              <a href="/logout" class="nav-link">Đăng xuất</a>
            </li>
        <%} else{%>
          <li class="nav-item">
            <a href="/login" class="nav-link">ĐĂNG NHẬP</a>
          </li>
          <li class="nav-item">
            <a href="/register" class="nav-link">ĐĂNG KÝ</a>
          </li>
        <% } %>
      </ul>
    </nav>
    <div class="filter-room">
      <form action="/search" method="POST">
        <div class="form-group">
          <input type="text" placeholder="nhập giá phòng, kiểu phòng..." name="text">
          <button type="submit" class="btn btn-outline-secondary search-input">Tìm kiếm</button>
        </div>
        <div class="sub-form-group">
          <div class="form-group">
            <label for="type">Kiểu phòng</label>
            <select name="type" id="type">
              <option value="" selected></option>
              <option value="Phòng trọ">Phòng trọ</option>
              <option value="Căn hộ">Căn hộ</option>
            </select>
          </div>
          <div class="form-group">
            <label for="price">Giá phòng</label>
            <select name="price" id="price">
              <option value="" selected></option>
              <option value="1000000">dưới 1.000.000 vnđ</option>
              <option value="2000000">dưới 2.000.000 vnđ</option>
              <option value="5000000">dưới 5.000.000 vnđ</option>
              <option value="8000000">dưới 8.000.000 vnđ</option>
              <option value="10000000">dưới 10.000.000 vnđ</option>
              <option value="20000000">dưới 12.000.000 vnđ</option>
            </select>
          </div>
          <div class="form-group">
            <label for="acreage">Diện tích</label>
            <select name="acreage" id="acreage">
              <option value="" selected></option>
              <option value="30">30 m2</option>
              <option value="40">40 m2</option>
              <option value="60">60 m2</option>
              <option value="80">80 m2</option>
              <option value="100">Trên 100 m2</option>
            </select>
          </div>
          <button type="submit" class="btn btn-outline-secondary search-input">Lọc kết quả</button>
        </div>
      </form>
    </div>
  </header>